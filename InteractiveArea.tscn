script/source = "extends Area2D

onready var tooltip = $Tooltip

signal activated()

func _ready():
	tooltip.hide()

func _process(delta):
	if Input.is_action_just_pressed(\"interact\") and Global.current_interactive_area == self:
		emit_signal(\"activated\")

func _on_InteractableArea_body_entered(body: Node2D):
	if not body.is_in_group(\"Player\"):
		return
	
	tooltip.show()
	Global.current_interactive_area = self


func _on_InteractiveArea_body_exited(body: Node2D):
	if not body.is_in_group(\"Player\"):
		return
	
	tooltip.hide()
	Global.current_interactive_area = null
"

